<clickhouse replace="true">
    <logger>
        <level>debug</level>
        <log>/var/log/clickhouse-server/clickhouse-server.log</log>
        <errorlog>/var/log/clickhouse-server/clickhouse-server.err.log</errorlog>
        <size>1000M</size>
        <count>3</count>
    </logger>
    <display_name>clickhouse_dev</display_name>
    <listen_host>0.0.0.0</listen_host>
    <http_port>8123</http_port>
    <tcp_port>9000</tcp_port>
    <user_directories>
        <users_xml>
            <path>users.xml</path>
        </users_xml>
        <local_directory>
            <path>/var/lib/clickhouse/access/</path>
        </local_directory>
    </user_directories>
    
    <!-- Disable memory profiler to prevent trace_log growth -->
    <total_memory_profiler_step>0</total_memory_profiler_step>
    
    <!-- Configure system tables with TTL to auto-delete old logs -->
    <trace_log>
        <database>system</database>
        <table>trace_log</table>
        <ttl>event_date + INTERVAL 3 DAY DELETE</ttl>
        <partition_by>toYYYYMM(event_date)</partition_by>
    </trace_log>
    
    <text_log>
        <database>system</database>
        <table>text_log</table>
        <ttl>event_date + INTERVAL 7 DAY DELETE</ttl>
        <partition_by>toYYYYMM(event_date)</partition_by>
    </text_log>
    
    <metric_log>
        <database>system</database>
        <table>metric_log</table>
        <ttl>event_date + INTERVAL 7 DAY DELETE</ttl>
        <partition_by>toYYYYMM(event_date)</partition_by>
    </metric_log>
</clickhouse>
